<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/payment.css">
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
        integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Payment</title>
</head>

<body>
    <main>
        <!-- Header -->
        <header class="header">
            <div class="content">
                <nav class="navbar">
                    <!-- Logo -->
                    <a href="/"><img src="/img/Logo.svg" alt=""></a>
                </nav>
            </div>
        </header>

        <!-- Thông tin sản phẩm -->
        <div class="cart-container">
            <div class="product-section">
                <div class="product-info">
                    <% products.forEach(product => { %>
                        <div class="product">
                            <img src="<%= product.hinhanh %>" alt="Sản phẩm">
                            <div class="product-details">
                                <p><%= product.tensanpham %></p>
                                <p>Size: <%= product.kichthuoc[0] %></p> 
                                <p>SL: 1</p>
                                <div class="product-price"><%= product.gia.toLocaleString() %> đ</div>
                            </div>
                        </div>
                    <% }) %>

                    <!-- Tổng cộng -->
                    <div class="cart-summary">
                        <div class="cart-summary-row">
                            <span>Tổng số lượng sản phẩm</span>
                            <span><%= totalQuantity %></span>
                        </div>
                        <div class="cart-summary-row">
                            <span>Phí vận chuyển</span>
                            <span><%= shippingFee.toLocaleString() %> đ</span>
                        </div>
                        <div class="cart-summary-row total">
                            <span>Tổng cộng</span>
                            <span><%= totalPrice.toLocaleString() %> đ</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Địa chỉ giao hàng -->
            <div class="right-section">
                <div class="shipping-info">
                    <h3>Địa chỉ giao hàng</h3>
                    <form>
                        <div class="form-group">
                            <input type="text" placeholder="Họ tên" required value="<%= user.hoten %>">
                        </div>
                        <div class="form-group">
                            <input type="text" placeholder="Địa chỉ nhà" required value="<%= user.diachi %>">
                        </div>
                        <div class="form-group">
                            <input type="text" placeholder="Thành phố" class="form-3" required value="<%= user.thanhpho %>">
                            <input type="text" placeholder="Quận" required value="<%= user.quan %>">
                        </div>
                        <div class="form-group">
                            <input type="text" placeholder="Phường" class="form-4" required value="<%= user.phuong %>">
                            <input type="text" placeholder="Số điện thoại" required value="<%= user.sodienthoai %>">
                        </div>
                    </form>
                </div>

                <!-- Phương thức thanh toán -->
                <div class="payment-method">
                    <h3>Phương thức thanh toán</h3>
                    <form>
                        <div class="payment-option">
                            <input type="radio" name="payment" checked>
                            <label>Thanh toán khi nhận hàng (COD)</label>
                        </div>
                        <div class="payment-option">
                            <input type="radio" name="payment">
                            <img src="/img/momo.jpg" alt="MOMO">
                            <label>Thanh toán qua MOMO</label>
                        </div>
                        <div class="payment-option">
                            <input type="radio" name="payment">
                            <img src="/img/vnpay.jpg" alt="VNPAY">
                            <label>Thanh toán trực tuyến (VNPAY - QR)</label>
                        </div>
                    </form>
                </div>

                <!-- Nút tiến hành đặt hàng -->
                <div class="checkout-button">
                    <button>Tiến hành đặt hàng</button>
                </div>
            </div>
        </div>
    </main>
</body>

</html>
